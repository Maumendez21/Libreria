<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@id</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¡Seguro que quiere eliminar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" @onclick="eliminar"  class="btn btn-primary" data-bs-dismiss="modal">Eliminar</button>
            </div>
        </div>
    </div>
</div>
@code {

    [Parameter]
    public EventCallback<string> eventDelete { get; set; }

    [Parameter]
    public string id { get; set; }


    public void eliminar()
    {
        eventDelete.InvokeAsync(id);
    }
}
